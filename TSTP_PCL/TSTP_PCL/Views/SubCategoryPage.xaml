    <ListView x:Name="listViewSubCategory" HasUnevenRows="true" SeparatorVisibility="Default"                        
                      VerticalOptions="Fill" MinimumHeightRequest="65" HeightRequest="2500"
                      ItemsSource="{ Binding SubCategoryList }"
                      SelectedItem="{ Binding SelectedSubCategory, Mode=TwoWay }"
                      >
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <ViewCell.View>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Text="{ Binding SubCategoryUDesc }" HeightRequest="50" FontSize="Medium" VerticalOptions="Center" XAlign="Center"
                            YAlign="Center" Margin="20,0,0,0"/>
                        </Grid>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
